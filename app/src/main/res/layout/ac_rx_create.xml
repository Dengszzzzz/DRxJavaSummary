<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/top_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp">
    <TextView
        style="@style/myTextView"
        android:text="基础创建"/>

        <Button
            android:id="@+id/btn_create"
            style="@style/myButton"
            android:text="create"/>

        <TextView
            style="@style/myTextView"
            android:text="快速创建"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_just"
                style="@style/myButton"
                android:text="just"/>

            <Button
                android:id="@+id/btn_fromArray"
                style="@style/myButton"
                android:text="fromArray"/>
            <Button
                android:id="@+id/btn_fromIterable"
                style="@style/myButton"
                android:text="fromIterable"/>


        </LinearLayout>

        <TextView
            style="@style/myTextView"
            android:text="延迟创建"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_defer"
                style="@style/myButton"
                android:text="defer"/>

            <Button
                android:id="@+id/btn_timer"
                style="@style/myButton"
                android:text="timer"/>
            <Button
                android:id="@+id/btn_interval"
                style="@style/myButton"
                android:text="interval"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_intervalRange"
                style="@style/myButton"
                android:text="intervalRange"/>

            <Button
                android:id="@+id/btn_range"
                style="@style/myButton"
                android:text="range"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>